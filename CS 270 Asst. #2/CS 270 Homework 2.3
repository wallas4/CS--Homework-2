print "Please enter a number (q to quit): "
num = gets.chomp

while num != "q"
  if num.to_i % 2 == 0
     puts "#{num} is even!"
  else
     puts "#{num} is odd!"
end

print "Please enter a number (q to quit): "
num = gets.chomp

end